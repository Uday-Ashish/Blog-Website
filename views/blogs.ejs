
<html>
  
  <%- include('./partials/head.ejs') %>
  
  
  <body>

    <header>
      <nav class = "navbar">
        <div class = "container">
          <a href = "/" class = "navbar-brand">Blogspot | <%= title %></a>
          <div class = "navbar-nav">
            <a href = "/">home</a>
            <a href = "/create">create</a>
            <a href = "/blogs">All Blogs</a>
            <a href = "/about">about</a>
          </div>
        </div>
      </nav>

       
      
      <section class = "blog" id = "blog">
        <div class = "container">
          <div class = "title">
            <h2>Latest Blogs</h2>
            <p>recent blogs about art & design</p>
          </div>
          <div class = "blog-content">

            <% if(blogs.length > 0) { %>
                <% blogs.forEach( blog => {   %>
                    <% let randi = Math.floor(Math.random()* 12) + 1%>
                    <% let src = "images/blog-p-" + randi.toString() + ".jpg"; %>
                    <div class = "blog-item">
                        <div class = "blog-img">
                          <img src = <%= src %> alt = "">
                          <span><i class = "far fa-heart"></i></span>
                        </div>
                        <div class = "blog-text">
                            <% const options = { weekday: 'short', year: 'numeric', month: 'short', day: 'numeric', hour: '2-digit', minute: '2-digit' }; %>
                            <% const formattedDate = blog.updatedAt.toLocaleDateString('en-US', options); %>  
                          <span> <%= formattedDate %></span>
                          <h2><%= blog.title %></h2>
                          <p><%= blog.subhead %></p>
                          <a href = "/blog?id=<%= blog._id %>">Read More</a>
                        </div>
                    </div>
                <% } ) ; %>
            <% } else { %>
                <h5> There are no blogs display noob </h5>
            <% } %>
                    



          </div>
        </div>
      </section>
      
    </header>
    

    <!-- footer -->
    <%- include('./partials/footer.ejs') %>
    <!-- end of footer -->
    
    
  </body>
</html>